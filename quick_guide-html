<script>
  const table = document.getElementById("formulaTable");

  window.onload = () => {
    const isOpen = localStorage.getItem("badtripp_formulas_open");
    if (isOpen === "true") {
      table.style.display = "block";
    }
  };

  function toggleTable() {
    if (table.style.display === "none") {
      table.style.display = "block";
      localStorage.setItem("badtripp_formulas_open", "true");
    } else {
      table.style.display = "none";
      localStorage.setItem("badtripp_formulas_open", "false");
    }
  }

  function openLightbox(src) {
    document.getElementById("lightbox-img").src = src;
    document.getElementById("lightbox").style.display = "block";
  }

  function closeLightbox() {
    document.getElementById("lightbox").style.display = "none";
  }

  function toggleRSSFormulas() {
    const rssTable = document.getElementById("rssFormulaTable");
    rssTable.style.display = (rssTable.style.display === "none") ? "block" : "none";
  }
</script>

